generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int     @id @default(autoincrement())
  nome  String
  email String  @unique
  senha String
  foto  String?

  @@map("usuarios")
}

model Concorrente {
  id       Int      @id @default(autoincrement())
  nome     String
  tipo     String
  endereco String
  foto     String?

  missoes  Missao[]

  @@map("concorrentes")
}

model Produto {
  id     Int     @id @default(autoincrement())
  nome   String
  codigo String?
  preco  Float
  foto   String?

  missoes MissaoProduto[]

  @@map("produtos")
}

model Missao {
  id             Int      @id @default(autoincrement())
  titulo         String
  status         String   @default("pendente")
  criadaEm       DateTime @default(now())

  concorrenteId Int
  concorrente   Concorrente @relation(fields: [concorrenteId], references: [id])

  produtos      MissaoProduto[]

  @@map("missoes")
}

model MissaoProduto {
  id        Int @id @default(autoincrement())

  missaoId  Int
  produtoId Int

  missao   Missao   @relation(fields: [missaoId], references: [id])
  produto  Produto  @relation(fields: [produtoId], references: [id])

  @@unique([missaoId, produtoId])
  @@map("missao_produtos")
}
