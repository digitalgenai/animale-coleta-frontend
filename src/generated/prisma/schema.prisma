generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int     @id @default(autoincrement())
  nome  String
  email String  @unique
  senha String
  foto  String?

  @@map("usuarios")
}

model Concorrente {
  id       Int     @id @default(autoincrement())
  nome     String
  tipo     String
  endereco String
  foto     String?

  @@map("concorrentes")
}

model Produto {
  id     Int     @id @default(autoincrement())
  nome   String
  codigo String?
  preco  Float
  foto   String?

  @@map("produtos")
}
